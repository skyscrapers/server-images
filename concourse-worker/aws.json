{
    "variables": {
        "aws_region": "eu-west-1",
        "aws_instance_type": "t3.medium",
        "aws_inspector_enabled": "true",
        "root_volume_size": "8",
        "root_volume_type": "gp2",
        "teleport_version": "11.1.1",
        "kubernetes_version": "1.22",
        "source_ami": "",
        "concourse_version": ""
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `aws_region`}}",
            "instance_type": "{{user `aws_instance_type`}}",
            "source_ami": "{{user `source_ami`}}",
            "ssh_username": "ec2-user",
            "ssh_pty": true,
            "ami_name": "concourse-worker-{{user `concourse_version`}}-{{isotime \"200601020304\"}}",
            "ami_description": "Concourse {{user `concourse_version`}} worker image, including Teleport version {{user `teleport_version`}} and kubectl version {{user `kubernetes_version`}}",
            "ami_groups": "all",
            "snapshot_groups": "all",
            "ami_block_device_mappings": [
                {
                    "device_name": "/dev/xvda",
                    "volume_size": "{{user `root_volume_size`}}",
                    "volume_type": "{{user `root_volume_type`}}",
                    "delete_on_termination": true
                }
            ],
            "run_tags": {
                "project": "concourse-worker",
                "k8s_version": "{{user `kubernetes_version`}}",
                "concourse_version": "{{user `concourse_version`}}",
                "teleport_version": "{{user `teleport_version`}}"
            },
            "tags": {
                "project": "concourse-worker",
                "k8s_version": "{{user `kubernetes_version`}}",
                "concourse_version": "{{user `concourse_version`}}",
                "teleport_version": "{{user `teleport_version`}}"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "../common_scripts/teleport.sh",
            "environment_vars": [
                "TELEPORT_VERSION={{user `teleport_version`}}"
            ]
        },
        {
            "type": "shell",
            "script": "scripts/setup.sh",
            "environment_vars": [
                "K8S_VERSION={{user `kubernetes_version`}}",
                "CONCOURSE_VERSION={{user `concourse_version`}}"
            ]
        },
        {
            "type": "shell",
            "script": "../common_scripts/al2_cleanup.sh"
        }
    ],
    "post-processors": [
        {
            "type": "manifest",
            "output": "packer_manifest.json",
            "strip_path": true
        }
    ]
}
